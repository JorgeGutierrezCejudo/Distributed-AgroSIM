<?xml version="1.0"?>
<launch>

<!-- Parametros para spwa muliples robots -->
  <arg name="robotname" default="robot0" />
  <arg name="x" default="34" />
  <arg name="y" default="34" />
  <arg name="mapname" default="grid" /> 
  <arg name="use_amcl" default="true" />
  <arg name="use_move_base" default="true" />


  
      <!-- Run the map server -->
    <!-- Standard ROS navigation modules -->

    


    <group ns="$(arg robotname)">
     <node name="map_server" pkg="map_server" type="map_server" args="$(find patrolling_sim)/maps/$(arg mapname)/$(arg mapname).yaml" />
    <group if="$(arg use_amcl)">
        <!--- AMCL -->   
            
        <!-- Override AMCL Frame Params to include prefix -->
        <include file="$(find patrolling_sim)/params/amcl/amcl_diffUnity.launch" />
                <!-- Override AMCL Frame Params to include prefix -->
        <param name="amcl/base_frame_id" value="$(arg robotname)/base_footprint"/>
        <param name="amcl/odom_frame_id" value="$(arg robotname)/odom"/>
        <param name="amcl/global_frame_id" value="map"/>
        <param name="amcl/initial_pose_x" value="$(arg x)"/>
        <param name="amcl/initial_pose_y" value="$(arg y)"/>
        <param name="amcl/initial_pose_a" value="0"/>
        <param name="amcl/tf_broadcast" value="false"/>
         
    </group>
    <group if="$(arg use_move_base)">
        <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
            <rosparam file="$(find patrolling_sim)/params/move_base/Unity/Turtlebot/costmap_common_params.yaml" command="load" ns="global_costmap" />
            <rosparam file="$(find patrolling_sim)/params/move_base/Unity/Turtlebot/costmap_common_params.yaml" command="load" ns="local_costmap" />
            <rosparam file="$(find patrolling_sim)/params/move_base/Unity/Turtlebot/local_costmap_params.yaml" command="load" />
            <rosparam file="$(find patrolling_sim)/params/move_base/Unity/Turtlebot/global_costmap_params.yaml" command="load" />
            <rosparam file="$(find patrolling_sim)/params/move_base/Unity/Turtlebot/base_local_planner_params.yaml" command="load" />
            <!-- remap from="cmd_vel" to="desired_cmd_vel" / -->
    
            <!-- Override MOVE_BASE Frame Params to include prefix -->
            <param name="global_costmap/laser_scan_sensor/sensor_frame" value="$(arg robotname)/base_scan"/>
            <param name="global_costmap/laser_scan_sensor/topic" value="$(arg robotname)/scan"/>
            <param name="global_costmap/robot_base_frame" value="$(arg robotname)/base_footprint"/>   
            <param name="local_costmap/global_frame" value="$(arg robotname)/odom"/>
            <param name="local_costmap/laser_scan_sensor/sensor_frame" value="$(arg robotname)/base_scan"/>
            <param name="local_costmap/laser_scan_sensor/topic" value="$(arg robotname)/scan"/>
            <param name="local_costmap/robot_base_frame" value="$(arg robotname)/base_footprint"/> 
        </node>
    </group>

            <param name ="/use_sim_time" value="true"/>
    </group>
  
</launch>
